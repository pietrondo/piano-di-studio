{
    "manifest_version": 3,
    "name": "Piano di Studi Universitari",
    "version": "1.1.0",
    "description": "Gestisci il tuo piano di studi universitario, tempi di studio e materiali didattici",
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs"
    ],
    "host_permissions": [
        "*://*.unimi.it/*",
        "*://*.unibo.it/*",
        "*://*.unipd.it/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.unimi.it/*",
                "*://*.unibo.it/*",
                "*://*.unipd.it/*"
            ],
            "js": ["js/content.js"]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}